    
<form action="/" method="Login">
    <div class="form-group">
        <label for="username">Username</label>
        <input type="text" id="username" class="form-control" style="width: 250px;" required />
    </div>
    <div class="form-group">
        <label for="passwort">Passwort</label>
        <input type="password" id="password" class="form-control" style="width: 250px;" required />
